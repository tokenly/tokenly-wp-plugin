{% macro app_credit_item_card_list_block( credit_items ) %}
	{% from 'components/AppCreditItemCardComponent.twig' import app_credit_item_card_component %}
	<div class="tokenly-block block-token-item-card-list">
		<div class="row">
			<div class="container">
				<div class="title-container">
					<h2>App credits</h2>
					<hr>
				</div>
				<div class="token-items">
					{% for credit_item in credit_items %}
						{{
							app_credit_item_card_component(
								credit_item.name,
								credit_item.balance
							)
						}}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endmacro %}
